page {
  background-color: #000000;
  color: #ffffff;
}
.history_table_style {
  display: flex;
}
.history_table_style .table {
  min-width: auto !important;
}
.main_title_style {
  margin: 20px;
  font-size: 20px;
  font-weight: bold;
}
.uni-container {
  background-color: #312c34;
  width: 98%;
  margin: 10px 0 50px 1%;
  position: absolute;
  top: 375px;
  padding-bottom: 30px;
  border-radius: 25px;
}
.uni-container .uni-table {
  color: #ffffff;
}
.uni-container .uni-table .uni-table-tr:nth-of-type(odd) {
  background-color: #0096db;
  color: #ffffff;
}
.uni-container .uni-table .uni-table-tr:nth-of-type(even) {
  background-color: #00668e;
  color: #ffffff;
}
.uni-container .uni-table .uni-table-th {
  color: #ffffff;
}
.uni-container .uni-table .uni-table-td {
  color: #ffffff;
}
.line_chart_style {
  background-color: #312c34;
  border-radius: 25px;
  width: 98%;
  position: absolute;
  margin-left: 1%;
  margin-top: 3%;
}
.line_chart_style .boottom_style {
  height: 25px;
}
.line_chart_style .charts_style {
  width: 98%;
}
.history_column {
  display: flex;
  width: 100%;
  height: auto;
}
.history_column .history_title {
  width: 22%;
  height: auto;
  margin: 10px 20px;
}
.history_column .history_title text {
  font-size: 20px;
  font-weight: bold;
}
.history_column .history_filter {
  width: 78%;
  display: flex;
  flex: 4;
  align-items: center;
  justify-content: center;
}
.history_column .history_filter .history_filter_item {
  flex-grow: 1;
  border-radius: 25px;
  border-style: solid;
  border-width: 1rpx;
  border-color: #0096db;
  text-align: center;
  margin-right: 5px;
}
.history_column .history_filter .history_filter_item_active {
  flex-grow: 1;
  border-radius: 25px;
  border-style: solid;
  border-width: 1rpx;
  border-color: #0096db;
  background-color: #0096db;
  text-align: center;
  margin-right: 5px;
}

