.uni-page-head-btn {
  display: initial !important;
}
.main_title_style {
  padding-left: 35%;
  margin: 10px;
}
.suspend_style {
  width: 100%;
  height: 280px;
  background-image: url(/static/img/starry.jpg);
  background-size: 100% 100%;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  border-radius: 0px 0px 60px 60px;
}
.suspend_style .suspend_style_row {
  width: 100%;
  height: 80%;
  align-items: initial !important;
}
.suspend_style .suspend_style_row .u-col:nth-child(1) text:nth-child(1) {
  text-align: right;
  padding: 70px 30px 10px 0;
  font-size: 25px;
  font-weight: 400;
  color: #ffffff;
}
.suspend_style .suspend_style_row .u-col:nth-child(1) text:nth-child(2) {
  text-align: right;
  padding-right: 30px;
  font-size: 15px;
  color: #ffffff;
}
.suspend_style .suspend_style_row .u-col:nth-child(2) text:nth-child(1) {
  padding: 55px 0 0 0;
  font-size: 40px;
  color: #ffffff;
  font-weight: bolder;
}
.suspend_style .suspend_style_row .u-col:nth-child(2) text:nth-child(2) {
  text-align: left;
  font-size: 10px;
  padding-left: 40px;
  color: #ffffff;
}
page {
  width: 100%;
  height: 100%;
  background-color: #000000;
}
.gas_list_style {
  position: relative;
  top: -80rpx;
}
.gas_detail_data {
  padding: 0rpx 0rpx 50px 0rpx;
}
.gas_list {
  width: 100%;
  height: 100%;
  margin-bottom: 40rpx;
}
.gas_data_list {
  width: 100%;
  height: 100%;
}
.gas_data_list .gas_list_number {
  font-size: 50rpx;
  font-weight: bold;
  color: #ffffff;
}
.gas_data_list .gas_list_number .gas_number {
  text-align: center;
}
.gas_data_list .gas_list_unit {
  color: #858585;
}
.gas_data_list .gas_list_unit .gas_unit {
  text-align: right;
  padding-right: 10rpx;
}
.gas_list_item {
  background: linear-gradient(0deg, #312c34 0%, #1c1c1c 80%) !important;
}
.u-grid-item:nth-of-type(odd) {
  padding: 10rpx;
  width: 43% !important;
  margin: 1% 1% 1% 6%;
  border-radius: 10px;
}
.u-grid-item:nth-of-type(even) {
  padding: 10rpx;
  width: 43% !important;
  margin: 1% 6% 1% 1%;
  border-radius: 10px;
}
.gas_list_icon .u-icon {
  flex-direction: inherit;
}
.gas_list_name {
  font-weight: bolder;
  font-size: 30rpx;
  text-align: right;
  padding-right: 10rpx;
  color: #858585;
}
/* 请根据实际需求修改父元素尺寸，组件自动识别宽高 */
.charts-box {
  width: 100%;
  height: 40%;
}
.gas-date {
  width: 100%;
  height: 60%;
}
.text {
  font-size: 12px;
  color: #fffffe;
  margin-top: 5px;
}
.uni-px-5 {
  padding-left: 10px;
  padding-right: 10px;
}
.uni-pb-5 {
  padding-bottom: 10px;
}
.center_box {
  width: 100%;
  height: 100%;
}
.left_box {
  width: 20%;
  background-color: #5500ff;
}
.right_box {
  width: 80%;
  height: 100%;
}
.left_navigation {
  word-break: break-all;
  height: 100%;
}
.navigation_item {
  padding: 0rpx 5rpx 5rpx 5rpx;
}
.active {
  background: #c41e00;
  color: #fff;
}

